<% @restaurants.each_slice(6) do |restaurants| %>
  <div class="row">
    <% restaurants.each do |restaurant| %>
      <div class="col-md-2">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to restaurant do %>
              <%= image_tag restaurant.image.url(:medium) %>
            <% end %>
          </div>
          <h2>
            <%= link_to restaurant.name.split(' ').map {|w| w.capitalize }.join(' '), restaurant %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
