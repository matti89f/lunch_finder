<%= form_for(@restaurant) do |f| %>
<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@restaurant.errors.count, "error") %>
    prohibited this restaurant from being saved:</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</div>
<br>
<div class="field">
  <%= f.label :website %><br>
  <%= f.text_field :website %>
</div>
<br>
<div class="field" >
  <%= f.label :image %><br>
  <%= f.file_field :image %>
</div>
<br>
<div class="field">
  <%= f.label :opening %><br>
  <% Restaurant::DAYNAMES.each do |day| %>
    <%= check_box_tag('restaurant[opening][]', day, @restaurant.opening && @restaurant.opening_days.include?(day) ? true : false) %>
    <%=  day %>
  <% end %>
</div>
<br>
<div class="field">
  <%= f.label :location %><br>
  <%= f.text_field :location %>
</div>
<br>
<div class="field">
  <%= f.label :vegan %>:
  <%= f.check_box :vegan %>
</div>
<br>
<div class="field">
  <%= f.label :comments %><br>
  <%= f.text_area :comments %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>

