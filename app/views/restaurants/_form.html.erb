<%= form_for(@restaurant) do |f| %>
<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@restaurant.errors.count, "error") %>
    prohibited this restaurant from being saved:</h2>

  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :website %><br>
  <%= f.text_field :website %>
</div>
<br>
<div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %><br>
</div>

<div class="field">
  <%= f.label :opening %><br>
  <% Date::DAYNAMES.each do |day| %>
    <%= check_box_tag('restaurant[opening][]', day, true) %>
    <%= label_tag day %>
  <% end %>
</div>
<div class="field">
  <%= f.label :location %><br>
  <%= f.text_field :location %>
</div>


<div class="field">
  <%= f.label :vegan %>:
  <%= f.check_box :vegan %>
</div>
<div class="field">
  <%= f.label :comments %><br>
  <%= f.text_area :comments %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
